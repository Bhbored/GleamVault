<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!--#region Global colors + Gradients + shadows-->
    <!--  ===== Palette (keeps your keys) =====  -->
    <Color x:Key="Primary">#00D4B5</Color>
    <Color x:Key="Secondary">#E8F9F5</Color>
    <Color x:Key="TextDark">#2D3748</Color>
    <Color x:Key="TextLight">#718096</Color>
    <Color x:Key="Border">#B2F0E6</Color>
    <Color x:Key="CardBg">#FFFFFF</Color>
    <Color x:Key="Ok">#16A34A</Color>
    <Color x:Key="Warn">#F59E0B</Color>
    <Color x:Key="Muted">#E5E7EB</Color>

    <!--  ===== Brushes / Gradients =====  -->
    <LinearGradientBrush x:Key="Brush.ButtonGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Offset="0" Color="#00D4B5" />
        <GradientStop Offset="1" Color="#6FFFE9" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="Brush.CardBgGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Offset="0" Color="#FFFFFF" />
        <GradientStop Offset="1" Color="#E8F9F5" />
    </LinearGradientBrush>

    <!--  ===== Background Gradient =====  -->
    <LinearGradientBrush x:Key="Brush.BackgroundGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0.0" Color="#CCFFFF" />
        <!--  Soft cyan top  -->
        <GradientStop Offset="0.7" Color="#F8FFFF" />
        <!--  Almost white, slightly tinted  -->
        <GradientStop Offset="1.0" Color="White" />
        <!--  Pure white bottom  -->
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="Brush.HeaderGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Offset="0" Color="#E8F9F5" />
        <GradientStop Offset="0.3" Color="#CCFFFF" />
        <GradientStop Offset="0.6" Color="#6FFFE9" />
        <GradientStop Offset="1" Color="#00D4B5" />

    </LinearGradientBrush>
    <!--  ===== Shadows =====  -->
    <Shadow
        x:Key="Sh.CyanSm"
        Brush="{StaticResource Brush.ButtonGradient}"
        Opacity="0.16"
        Radius="5"
        Offset="0,05" />
    <Shadow
        x:Key="Sh.CyanMd"
        Brush="{StaticResource Brush.ButtonGradient}"
        Opacity="0.18"
        Radius="20"
        Offset="0,10" />
    <Shadow
        x:Key="Sh.CyanLg"
        Brush="{StaticResource Brush.ButtonGradient}"
        Opacity="0.24"
        Radius="28"
        Offset="0,14" />


    <!--#endregion-->


    <!--#region Global fonts-->

    <!--  ===== Root typefaces =====  -->
    <!--  Implicit: every Label uses NexaLight by default  -->
    <Style TargetType="Label">
        <Setter Property="FontFamily" Value="NexaLight" />
        <Setter Property="TextColor" Value="{StaticResource TextDark}" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <!--  Bold helper when you just want heavy font quickly  -->
    <Style Class="bold" TargetType="Label">
        <Setter Property="FontFamily" Value="NexaHeavy" />
    </Style>

    <!--  ===== Typography scales =====  -->
    <Style Class="h1" TargetType="Label">
        <Setter Property="FontFamily" Value="NexaHeavy" />
        <!--  Heavy font  -->
        <Setter Property="FontSize" Value="28" />
        <Setter Property="TextColor" Value="{StaticResource TextDark}" />
        <Setter Property="Margin" Value="0,10,0,5" />
    </Style>

    <Style Class="h2" TargetType="Label">
        <Setter Property="FontFamily" Value="NexaHeavy" />
        <!--  Heavy font  -->
        <Setter Property="FontSize" Value="24" />
        <Setter Property="TextColor" Value="{StaticResource TextDark}" />
        <Setter Property="Margin" Value="0,10,0,5" />
    </Style>

    <Style Class="h3" TargetType="Label">
        <Setter Property="FontFamily" Value="NexaHeavy" />
        <!--  Heavy font  -->
        <Setter Property="FontSize" Value="20" />
        <Setter Property="TextColor" Value="{StaticResource TextDark}" />
        <Setter Property="Margin" Value="0,8,0,4" />
    </Style>

    <Style Class="h4" TargetType="Label">
        <Setter Property="FontFamily" Value="NexaHeavy" />
        <!--  Heavy font  -->
        <Setter Property="FontSize" Value="16" />
        <Setter Property="TextColor" Value="{StaticResource TextDark}" />
        <Setter Property="Margin" Value="0,6,0,3" />
    </Style>

    <Style Class="body" TargetType="Label">
        <Setter Property="FontFamily" Value="NexaLight" />
        <!--  Light font  -->
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="{StaticResource TextDark}" />
        <Setter Property="Margin" Value="0,0,0,5" />
    </Style>

    <Style Class="caption" TargetType="Label">
        <Setter Property="FontFamily" Value="NexaLight" />
        <!--  Light font  -->
        <Setter Property="FontSize" Value="12" />
        <Setter Property="TextColor" Value="{StaticResource TextLight}" />
        <Setter Property="Margin" Value="0,0,0,5" />
    </Style>
    <!--#endregion-->



    <!--#region Home-->
    <!--  Surfaces / cards  -->
    <!--  Secondary / ghost button  -->
    <Style Class="btn-ghost" TargetType="Button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="TextColor" Value="{StaticResource TextDark}" />
        <Setter Property="BorderColor" Value="{StaticResource Border}" />
        <Setter Property="BorderWidth" Value="1" />
        <Setter Property="CornerRadius" Value="18" />
        <Setter Property="Padding" Value="10,8" />
    </Style>


    <!--  Filter chip  -->
    <Style Class="chip" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource Secondary}" />
        <Setter Property="TextColor" Value="{StaticResource TextDark}" />
        <Setter Property="BorderColor" Value="{StaticResource Border}" />
        <Setter Property="BorderWidth" Value="1" />
        <Setter Property="CornerRadius" Value="18" />
        <Setter Property="Padding" Value="12,8" />
    </Style>


    <!--  Search field  -->
    <Style Class="search" TargetType="SearchBar">
        <Setter Property="BackgroundColor" Value="{StaticResource Secondary}" />
        <Setter Property="TextColor" Value="{StaticResource TextDark}" />
        <Setter Property="CancelButtonColor" Value="{StaticResource TextLight}" />
        <Setter Property="HeightRequest" Value="44" />
    </Style>


    <!--  Small icon bubble  -->
    <Style Class="icon-circle" TargetType="Border">
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="9999" />
            </Setter.Value>
        </Setter>
        <Setter Property="Background" Value="{StaticResource Secondary}" />
        <Setter Property="Padding" Value="8" />
        <Setter Property="Shadow" Value="{StaticResource Sh.CyanSm}" />
    </Style>


    <!--  Quantity steppers  -->
    <Style Class="qty-btn" TargetType="Button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderColor" Value="{StaticResource Border}" />
        <Setter Property="BorderWidth" Value="1" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="WidthRequest" Value="34" />
        <Setter Property="HeightRequest" Value="34" />
        <Setter Property="TextColor" Value="Black" />
        <Setter Property="FontSize" Value="20" />
    </Style>


    <!--  Price label (uses your fonts; just sizing)  -->
    <Style Class="price" TargetType="Label">
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="TextColor" Value="{StaticResource TextDark}" />
    </Style>


    <!--  Image holder for product cards  -->
    <Style Class="image-holder" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CardBg}" />
        <Setter Property="StrokeThickness" Value="0" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="14" />
            </Setter.Value>
        </Setter>
    </Style>


    <!--#endregion-->

</ResourceDictionary>