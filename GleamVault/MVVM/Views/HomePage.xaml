<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GleamVault.MVVM.Views.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Pages="clr-namespace:GleamVault.MVVM.Views"
    xmlns:conv="clr-namespace:GleamVault.Converters"
    xmlns:models="clr-namespace:Shared.Models;assembly=Shared"
    xmlns:shapes="clr-namespace:Microsoft.Maui.Controls.Shapes;assembly=Microsoft.Maui.Controls"
    xmlns:syncfusion="clr-namespace:Syncfusion.Maui.ListView;assembly=Syncfusion.Maui.ListView"
    xmlns:vm="clr-namespace:GleamVault.MVVM.ViewModels"
    x:DataType="vm:HomeVM"
    Background="{StaticResource Brush.BackgroundGradient}">

    <ContentPage.Resources>
        <conv:PriceConverter x:Key="PriceConverter" />
        <conv:HallmarkTypeConverter x:Key="HallmarkTypeConverter" />
        <conv:WeightUnitConverter x:Key="WeightUnitConverter" />
        <conv:CategoryColorConverter x:Key="CategoryColorConverter" />
        <conv:StockToColorConverter x:Key="StockToColorConverter" />
        <conv:StockStatusColorConverter x:Key="StockStatusColorConverter" />
        <conv:StockStatusTextConverter x:Key="StockStatusTextConverter" />
        <conv:StockToBoolConverter x:Key="StockToBoolConverter" />
    </ContentPage.Resources>

    <Grid ColumnDefinitions="75*,25*" RowDefinitions="Auto,*">

        <!--  Header with Wave Background  -->
        <Grid
            Grid.Row="0"
            Grid.ColumnSpan="2"
            HeightRequest="200">
            <shapes:Path
                Aspect="Fill"
                Data="M0,0 L0,160 Q180,210 360,160 T720,160 L720,0 Z"
                Fill="{StaticResource Brush.HeaderGradient}"
                HorizontalOptions="Fill"
                InputTransparent="True"
                Opacity="1"
                VerticalOptions="Fill" />
            <shapes:Path
                Aspect="Fill"
                Data="M0,0 L0,175 Q180,225 360,175 T720,175 L720,0 Z"
                Fill="White"
                HorizontalOptions="Fill"
                InputTransparent="True"
                Opacity="0.12"
                VerticalOptions="Fill" />
        </Grid>

        <!--  Header Content  -->
        <Grid
            Grid.Row="0"
            Grid.Column="0"
            Padding="20,20,20,0"
            RowDefinitions="Auto,Auto,Auto"
            RowSpacing="15"
            VerticalOptions="Start">

            <!--  Title  -->
            <VerticalStackLayout Grid.Row="0" Spacing="5">
                <HorizontalStackLayout Spacing="8">
                    <Label
                        StyleClass="h2"
                        Text="ðŸ’Ž"
                        VerticalOptions="Center" />
                    <Label StyleClass="h2" Text="Gleam &amp; Co." />
                </HorizontalStackLayout>
            </VerticalStackLayout>

            <!--  Search  -->
            <Grid Grid.Row="1">
                <SearchBar
                    Grid.Column="0"
                    Placeholder="Search by SKU, Name, or Category"
                    StyleClass="search" />
            </Grid>

            <!--  Filters  -->
            <Grid
                Grid.Row="2"
                ColumnDefinitions="Auto,*,Auto"
                ColumnSpacing="15">
                <HorizontalStackLayout Grid.Column="0" Spacing="10">
                    <Label
                        StyleClass="body"
                        Text="Category"
                        VerticalOptions="Center" />
                    <Button
                        Padding="16,8"
                        StyleClass="chip"
                        Text="Gold 18K" />
                    <Button
                        Padding="16,8"
                        StyleClass="chip"
                        Text="Necklaces" />
                </HorizontalStackLayout>

                <HorizontalStackLayout
                    Grid.Column="1"
                    HorizontalOptions="Start"
                    Spacing="10">
                    <Label
                        StyleClass="body"
                        Text="Hallmark"
                        VerticalOptions="Center" />
                    <Button
                        Padding="16,8"
                        StyleClass="chip"
                        Text="Sterlng 925" />
                </HorizontalStackLayout>
            </Grid>
        </Grid>

        <!--  Product Grid (SfListView)  -->
        <Grid Grid.Row="1" Grid.Column="0">
            <Border
                Margin="10"
                Background="{StaticResource Brush.BackgroundGradient}"
                HorizontalOptions="Fill"
                Shadow="{StaticResource Sh.CyanLg}"
                StrokeShape="RoundRectangle 25"
                StrokeThickness="0"
                VerticalOptions="Fill">

                <syncfusion:SfListView
                    x:Name="ProductsList"
                    Margin="10,10,10,0"
                    AutoFitMode="Height"
                    ItemSpacing="10"
                    ItemsSource="{Binding AllProducts}"
                    SelectionMode="None">

                    <syncfusion:SfListView.ItemsLayout>
                        <syncfusion:GridLayout x:Name="ProductGridLayout" SpanCount="3" />
                    </syncfusion:SfListView.ItemsLayout>

                    <syncfusion:SfListView.ItemTemplate>
                        <DataTemplate x:DataType="models:Product">
                            <Border
                                Padding="0"
                                Background="{StaticResource Brush.CardBgGradient}"
                                MinimumHeightRequest="340"
                                Shadow="{StaticResource Sh.CyanLg}"
                                Stroke="{Binding Category, Converter={StaticResource CategoryColorConverter}}"
                                StrokeShape="RoundRectangle 10"
                                StrokeThickness="1">

                                <Grid
                                    Padding="12"
                                    RowDefinitions="240,Auto,Auto,Auto"
                                    RowSpacing="4">

                                    <!--  Image + badges  -->
                                    <Grid Grid.Row="0">
                                        <Border HeightRequest="240" StyleClass="image-holder">
                                            <Image Aspect="AspectFit" Source="{Binding ImageUrl}" />
                                        </Border>

                                        <Grid Margin="8">
                                            <Border
                                                Padding="6,3"
                                                Background="{StaticResource Warn}"
                                                HorizontalOptions="Start"
                                                IsVisible="{Binding IsUniquePiece}"
                                                StrokeShape="RoundRectangle 8"
                                                StrokeThickness="0"
                                                VerticalOptions="Start">
                                                <Label
                                                    StyleClass="caption"
                                                    Text="UNIQUE"
                                                    TextColor="White" />
                                            </Border>

                                            <HorizontalStackLayout HorizontalOptions="End" VerticalOptions="Start">
                                                <Border
                                                    Padding="5"
                                                    Background="{StaticResource Primary}"
                                                    StrokeShape="RoundRectangle 5"
                                                    StrokeThickness="0">
                                                    <Grid>
                                                        <Label
                                                            FontFamily="NexaHeavy"
                                                            FontSize="12"
                                                            HorizontalOptions="Center"
                                                            Text="{Binding Hallmark, Converter={StaticResource HallmarkTypeConverter}}"
                                                            TextColor="White"
                                                            VerticalOptions="Center" />
                                                    </Grid>
                                                </Border>
                                            </HorizontalStackLayout>

                                            <Border
                                                Padding="5"
                                                Background="{Binding Category, Converter={StaticResource CategoryColorConverter}}"
                                                HorizontalOptions="Start"
                                                StrokeShape="RoundRectangle 5"
                                                StrokeThickness="0"
                                                VerticalOptions="End">
                                                <Label
                                                    FontFamily="NexaHeavy"
                                                    FontSize="12"
                                                    HorizontalOptions="Center"
                                                    Text="{Binding Category.Name}"
                                                    TextColor="White"
                                                    VerticalOptions="Center" />
                                            </Border>
                                        </Grid>
                                    </Grid>

                                    <!--  Name  -->
                                    <Label
                                        Grid.Row="1"
                                        Margin="0,2,0,0"
                                        LineBreakMode="TailTruncation"
                                        MaxLines="2"
                                        StyleClass="h4"
                                        Text="{Binding Name}" />

                                    <!--  Weight & Stock  -->
                                    <Grid
                                        Grid.Row="2"
                                        Margin="0,1,0,0"
                                        ColumnDefinitions="*,*"
                                        ColumnSpacing="8">
                                        <Label
                                            Grid.Column="0"
                                            StyleClass="body"
                                            TextColor="{StaticResource TextLight}">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="{Binding Weight, StringFormat='{0}  '}" />
                                                    <Span Text="{Binding WeightUnit, Converter={StaticResource WeightUnitConverter}}" />
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>

                                        <Label
                                            Grid.Column="1"
                                            HorizontalOptions="End"
                                            StyleClass="body"
                                            TextColor="{Binding CurrentStock, Converter={StaticResource StockStatusColorConverter}}">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="â€¢ " />
                                                    <Span Text="{Binding CurrentStock, Converter={StaticResource StockStatusTextConverter}}" />
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                    </Grid>

                                    <!--  Price + Add  -->
                                    <Grid
                                        Grid.Row="3"
                                        Margin="0,2,0,0"
                                        ColumnDefinitions="*,Auto"
                                        ColumnSpacing="8">
                                        <Label
                                            Grid.Column="0"
                                            StyleClass="h4"
                                            Text="{Binding UnitPrice, Converter={StaticResource PriceConverter}}"
                                            VerticalOptions="Center" />
                                        <Image
                                            Grid.Column="1"
                                            HeightRequest="35"
                                            IsEnabled="{Binding CurrentStock, Converter={StaticResource StockToBoolConverter}}"
                                            IsVisible="{Binding CurrentStock, Converter={StaticResource StockToBoolConverter}}"
                                            Source="add.png"
                                            WidthRequest="35">
                                            <Image.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type Pages:HomePage}}, Path=BindingContext.AddToCartCommand}" CommandParameter="{Binding .}" />
                                            </Image.GestureRecognizers>
                                        </Image>
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </syncfusion:SfListView.ItemTemplate>
                </syncfusion:SfListView>
            </Border>
        </Grid>

        <!--  Cart Section  -->
        <Border
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="1"
            Margin="0,20,10,20"
            Padding="20"
            Background="White"
            Shadow="{StaticResource Sh.CyanMd}"
            StrokeShape="RoundRectangle 20"
            StrokeThickness="0">

            <Grid RowDefinitions="Auto,*,Auto" RowSpacing="15">

                <Grid
                    Grid.Row="0"
                    ColumnDefinitions="*,Auto"
                    ColumnSpacing="10">
                    <Label
                        Grid.Column="0"
                        StyleClass="h2"
                        Text="Current Sale"
                        VerticalOptions="Center" />
                    <ImageButton
                        Grid.Column="1"
                        BackgroundColor="Transparent"
                        Command="{Binding ClearCartCommand}"
                        HeightRequest="30"
                        IsVisible="{Binding HasItemsInCart}"
                        Source="reset.png"
                        WidthRequest="30" />
                </Grid>

                <!--  Cart Items (SfListView)  -->
                <syncfusion:SfListView
                    x:Name="CartList"
                    Grid.Row="1"
                    AutoFitMode="Height"
                    ItemsSource="{Binding CartItems}"
                    SelectionBackground="Transparent"
                    SelectionMode="None">
                    <syncfusion:SfListView.ItemsLayout>
                        <syncfusion:LinearLayout />
                    </syncfusion:SfListView.ItemsLayout>

                    <syncfusion:SfListView.EmptyView>
                        <VerticalStackLayout
                            HorizontalOptions="Center"
                            Spacing="20"
                            VerticalOptions="Center">
                            <Image
                                Aspect="AspectFit"
                                HorizontalOptions="Center"
                                IsAnimationPlaying="True"
                                Source="cart.gif"
                                VerticalOptions="Center" />
                            <Label
                                HorizontalOptions="Center"
                                StyleClass="h4"
                                Text="Cart is Empty" />
                        </VerticalStackLayout>
                    </syncfusion:SfListView.EmptyView>

                    <syncfusion:SfListView.ItemTemplate>
                        <DataTemplate x:DataType="models:Product">
                            <Border
                                Margin="0,0,0,10"
                                Padding="14"
                                Background="{StaticResource Brush.CardBgGradient}"
                                Shadow="{StaticResource Sh.CyanSm}"
                                StrokeShape="RoundRectangle 14"
                                StrokeThickness="0">

                                <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="10">
                                    <Grid
                                        Grid.Row="0"
                                        ColumnDefinitions="Auto,*,Auto"
                                        ColumnSpacing="12">
                                        <Border
                                            Grid.Column="0"
                                            Background="{StaticResource Secondary}"
                                            HeightRequest="70"
                                            StrokeShape="RoundRectangle 10"
                                            StrokeThickness="0"
                                            WidthRequest="70">
                                            <Image Aspect="AspectFill" Source="{Binding ImageUrl}" />
                                        </Border>

                                        <VerticalStackLayout
                                            Grid.Column="1"
                                            Spacing="6"
                                            VerticalOptions="Center">
                                            <Label
                                                FontFamily="NexaHeavy"
                                                FontSize="15"
                                                LineBreakMode="TailTruncation"
                                                MaxLines="2"
                                                Text="{Binding Name}"
                                                TextColor="{StaticResource TextDark}" />
                                            <HorizontalStackLayout Spacing="6">
                                                <Label
                                                    FontSize="13"
                                                    Text="{Binding Weight, StringFormat='{0}'}"
                                                    TextColor="{StaticResource TextLight}" />
                                                <Label
                                                    FontSize="13"
                                                    Text="{Binding WeightUnit, Converter={StaticResource WeightUnitConverter}}"
                                                    TextColor="{StaticResource TextLight}" />
                                            </HorizontalStackLayout>
                                            <Label
                                                FontFamily="NexaHeavy"
                                                FontSize="15"
                                                Text="{Binding UnitPrice, Converter={StaticResource PriceConverter}}"
                                                TextColor="{StaticResource Primary}" />
                                        </VerticalStackLayout>

                                        <Border
                                            Grid.Column="2"
                                            Padding="10"
                                            Background="{StaticResource Secondary}"
                                            HeightRequest="36"
                                            StrokeShape="RoundRectangle 10"
                                            StrokeThickness="0"
                                            VerticalOptions="Start"
                                            WidthRequest="36">
                                            <Label
                                                FontSize="16"
                                                HorizontalOptions="Center"
                                                Text="âŒ"
                                                VerticalOptions="Center">
                                                <Label.GestureRecognizers>
                                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type Pages:HomePage}}, Path=BindingContext.RemoveFromCartCommand}" CommandParameter="{Binding .}" />
                                                </Label.GestureRecognizers>
                                            </Label>
                                        </Border>
                                    </Grid>

                                    <BoxView
                                        Grid.Row="1"
                                        BackgroundColor="{StaticResource Border}"
                                        HeightRequest="1"
                                        Opacity="0.5" />

                                    <Grid
                                        Grid.Row="2"
                                        ColumnDefinitions="Auto,*"
                                        ColumnSpacing="10">
                                        <Label
                                            Grid.Column="0"
                                            FontSize="14"
                                            Text="Quantity:"
                                            TextColor="{StaticResource TextLight}"
                                            VerticalOptions="Center" />
                                        <Grid
                                            Grid.Column="1"
                                            ColumnDefinitions="Auto,Auto,Auto"
                                            ColumnSpacing="8"
                                            HorizontalOptions="Start">
                                            <Button
                                                Grid.Column="0"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type Pages:HomePage}}, Path=BindingContext.DecreaseQuantityCommand}"
                                                CommandParameter="{Binding .}"
                                                StyleClass="qty-btn"
                                                Text="-" />
                                            <Label
                                                Grid.Column="1"
                                                FontFamily="NexaHeavy"
                                                FontSize="15"
                                                HorizontalTextAlignment="Center"
                                                Text="{Binding CurrentStock}"
                                                TextColor="{StaticResource TextDark}"
                                                VerticalOptions="Center"
                                                WidthRequest="40" />
                                            <Button
                                                Grid.Column="2"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type Pages:HomePage}}, Path=BindingContext.IncreaseQuantityCommand}"
                                                CommandParameter="{Binding .}"
                                                StyleClass="qty-btn"
                                                Text="+" />
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </syncfusion:SfListView.ItemTemplate>
                </syncfusion:SfListView>

                <!--  Summary  -->
                <Grid
                    Grid.Row="2"
                    RowDefinitions="Auto,Auto,Auto,Auto,Auto"
                    RowSpacing="10">
                    <Grid
                        Grid.Row="0"
                        ColumnDefinitions="*,Auto"
                        ColumnSpacing="10">
                        <Label
                            Grid.Column="0"
                            StyleClass="body"
                            Text="Subtotal"
                            VerticalOptions="Center" />
                        <Label
                            Grid.Column="1"
                            StyleClass="body"
                            Text="{Binding CartSubtotal, Converter={StaticResource PriceConverter}}"
                            VerticalOptions="Center" />
                    </Grid>

                    <Grid
                        Grid.Row="1"
                        ColumnDefinitions="*,Auto"
                        ColumnSpacing="10">
                        <Label
                            Grid.Column="0"
                            StyleClass="body"
                            Text="Discount"
                            VerticalOptions="Center" />
                        <Entry
                            Grid.Column="1"
                            BackgroundColor="{StaticResource Secondary}"
                            HeightRequest="35"
                            HorizontalTextAlignment="Center"
                            Keyboard="Numeric"
                            Placeholder="0.00"
                            Text="{Binding DiscountAmount}"
                            WidthRequest="100" />
                    </Grid>

                    <BoxView
                        Grid.Row="2"
                        Margin="0,5"
                        BackgroundColor="{StaticResource Border}"
                        HeightRequest="1" />

                    <Grid
                        Grid.Row="3"
                        ColumnDefinitions="*,Auto"
                        ColumnSpacing="10">
                        <Label
                            Grid.Column="0"
                            StyleClass="h3"
                            Text="Total"
                            VerticalOptions="Center" />
                        <Label
                            Grid.Column="1"
                            StyleClass="h3"
                            Text="{Binding CartTotal, Converter={StaticResource PriceConverter}}"
                            VerticalOptions="Center" />
                    </Grid>

                    <Button
                        Grid.Row="4"
                        Margin="0,10,0,0"
                        Padding="0,16"
                        Background="{StaticResource Brush.ButtonGradient}"
                        Command="{Binding CompleteSaleCommand}"
                        CornerRadius="10"
                        FontFamily="NexaHeavy"
                        FontSize="16"
                        IsEnabled="{Binding HasItemsInCart}"
                        Shadow="{StaticResource Sh.CyanMd}"
                        Text="Complete Sale ðŸ’³"
                        TextColor="White" />
                </Grid>
            </Grid>
        </Border>

    </Grid>
</ContentPage>
