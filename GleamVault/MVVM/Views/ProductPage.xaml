<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GleamVault.MVVM.Views.ProductPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Pages="clr-namespace:GleamVault.MVVM.Views"
    xmlns:buttons="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
    xmlns:conv="clr-namespace:GleamVault.Converters"
    xmlns:editors="clr-namespace:Syncfusion.Maui.Inputs;assembly=Syncfusion.Maui.Inputs"
    xmlns:enums="clr-namespace:Shared.Models.Enums;assembly=Shared"
    xmlns:models="clr-namespace:Shared.Models;assembly=Shared"
    xmlns:shapes="clr-namespace:Microsoft.Maui.Controls.Shapes;assembly=Microsoft.Maui.Controls"
    xmlns:syncfusion="clr-namespace:Syncfusion.Maui.ListView;assembly=Syncfusion.Maui.ListView"
    xmlns:vm="clr-namespace:GleamVault.MVVM.ViewModels"
    x:DataType="vm:ProductVM"
    Background="{StaticResource Brush.BackgroundGradient}">

    <ContentPage.Resources>
        <conv:PriceConverter x:Key="PriceConverter" />
        <conv:HallmarkTypeConverter x:Key="HallmarkTypeConverter" />
        <conv:WeightUnitConverter x:Key="WeightUnitConverter" />
        <conv:CategoryColorConverter x:Key="CategoryColorConverter" />
        <conv:HallmarkColorConverter x:Key="HallmarkColorConverter" />

    </ContentPage.Resources>
    <Grid RowDefinitions="Auto,*">

        <Grid Grid.Row="0" HeightRequest="240">
            <!--  Wave 1  -->
            <shapes:Path
                Aspect="Fill"
                Data="M0,0 L0,160 Q180,210 360,160 T720,160 L720,0 Z"
                Fill="{StaticResource Brush.HeaderGradient}"
                HorizontalOptions="Fill"
                InputTransparent="True"
                Opacity="1"
                VerticalOptions="Fill" />

            <!--  Subtle overlay wave for depth  -->
            <shapes:Path
                Aspect="Fill"
                Data="M0,0 L0,175 Q180,225 360,175 T720,175 L720,0 Z"
                Fill="White"
                HorizontalOptions="Fill"
                InputTransparent="True"
                Opacity="0.12"
                VerticalOptions="Fill" />
        </Grid>
        <!--  header  -->
        <Grid
            Grid.Row="0"
            Padding="20,20,20,0"
            RowDefinitions="Auto,Auto,Auto"
            RowSpacing="15"
            VerticalOptions="Start">

            <!--  Title  -->
            <Grid
                Grid.Row="0"
                ColumnDefinitions="*,Auto"
                ColumnSpacing="12">
                <HorizontalStackLayout
                    Grid.Column="0"
                    Spacing="8"
                    VerticalOptions="Center">
                    <Image
                        HeightRequest="30"
                        Source="diamond.png"
                        WidthRequest="30" />
                    <Label StyleClass="h2" Text="Gleam &amp; Co." />
                </HorizontalStackLayout>
                <HorizontalStackLayout
                    Grid.Column="1"
                    Spacing="20"
                    VerticalOptions="Center">
                    <Border
                        Padding="10"
                        Background="{StaticResource Brush.CardBgGradient}"
                        Shadow="{StaticResource Sh.CyanSm}"
                        StrokeShape="RoundRectangle 10"
                        StrokeThickness="0">
                        <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                            <Image
                                HeightRequest="25"
                                Source="reports.png"
                                WidthRequest="25" />
                            <Label
                                Margin="0"
                                FontAttributes="Bold"
                                StyleClass="body"
                                Text="Export CSV"
                                VerticalOptions="Center" />
                        </HorizontalStackLayout>
                    </Border>
                    <Border
                        Padding="12,10"
                        Background="{StaticResource Brush.ButtonGradient}"
                        Shadow="{StaticResource Sh.CyanSm}"
                        StrokeShape="RoundRectangle 10"
                        StrokeThickness="0">
                        <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                            <Image
                                HeightRequest="25"
                                Source="discount.png"
                                WidthRequest="25" />
                            <Label
                                Margin="0"
                                FontAttributes="Bold"
                                StyleClass="body"
                                Text="Add Discount"
                                VerticalOptions="Center" />
                        </HorizontalStackLayout>
                    </Border>
                    <Border
                        Padding="12,10"
                        Background="{StaticResource Brush.CardBgGradient}"
                        Shadow="{StaticResource Sh.CyanSm}"
                        StrokeShape="RoundRectangle 10"
                        StrokeThickness="0">
                        <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                            <Image
                                HeightRequest="25"
                                Source="add.png"
                                WidthRequest="25" />
                            <Label
                                Margin="0"
                                FontAttributes="Bold"
                                StyleClass="body"
                                Text="Add Product"
                                VerticalOptions="Center" />
                        </HorizontalStackLayout>
                    </Border>
                </HorizontalStackLayout>
            </Grid>

            <!--  Search  -->
            <Grid
                Grid.Row="1"
                ColumnDefinitions="*,Auto"
                ColumnSpacing="12">
                <Border
                    Grid.Column="0"
                    Padding="12,10"
                    Background="{StaticResource Brush.CardBgGradient}"
                    Shadow="{StaticResource Sh.CyanSm}"
                    StrokeShape="RoundRectangle 14"
                    StrokeThickness="0">
                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                        <Image
                            Grid.Column="0"
                            HeightRequest="25"
                            Source="search.png"
                            VerticalOptions="Center"
                            WidthRequest="25" />
                        <editors:SfAutocomplete
                            x:Name="SearchBox"
                            Grid.Column="1"
                            Background="Transparent"
                            ClearButtonIconColor="Cyan"
                            DisplayMemberPath="Name"
                            DropDownBackground="White"
                            DropDownItemHeight="72"
                            EnableAutoSize="True"
                            FontFamily="NexaLight"
                            HorizontalOptions="Fill"
                            ItemsSource="{Binding AllProducts}"
                            Placeholder="Search Product by Name..."
                            PlaceholderColor="Black"
                            SelectedItems="{Binding SelectedProducts, Mode=TwoWay}"
                            SelectionChanged="autocomplete_SelectionChanged"
                            SelectionMode="Multiple"
                            SelectionTextHighlightColor="LightGray"
                            Stroke="Transparent"
                            TokensWrapMode="Wrap"
                            VerticalOptions="Fill">

                            <editors:SfAutocomplete.ItemTemplate>
                                <DataTemplate x:DataType="models:Product">
                                    <Grid
                                        Padding="10"
                                        ColumnDefinitions="Auto,*,Auto"
                                        ColumnSpacing="12">
                                        <!--  Left: avatar  -->
                                        <Border
                                            Background="{StaticResource Secondary}"
                                            HeightRequest="40"
                                            HorizontalOptions="Center"
                                            StrokeShape="RoundRectangle 999"
                                            StrokeThickness="0"
                                            VerticalOptions="Center"
                                            WidthRequest="40">
                                            <Image Aspect="AspectFill" Source="{Binding ImageUrl}" />
                                        </Border>

                                        <!--  Middle: name + meta  -->
                                        <Grid
                                            Grid.Column="1"
                                            RowDefinitions="Auto,Auto"
                                            VerticalOptions="Center">
                                            <Label
                                                Grid.Row="0"
                                                FontFamily="NexaHeavy"
                                                FontSize="14"
                                                LineBreakMode="TailTruncation"
                                                MaxLines="1"
                                                Text="{Binding Name}"
                                                TextColor="{StaticResource TextDark}" />

                                            <HorizontalStackLayout Grid.Row="1" Spacing="6">
                                                <Label
                                                    FontSize="12"
                                                    LineBreakMode="TailTruncation"
                                                    MaxLines="1"
                                                    Text="{Binding Sku}"
                                                    TextColor="{StaticResource TextLight}" />
                                                <Border
                                                    Padding="6,2"
                                                    Background="{Binding Category, Converter={StaticResource CategoryColorConverter}}"
                                                    StrokeShape="RoundRectangle 6"
                                                    StrokeThickness="0">
                                                    <Label
                                                        FontSize="11"
                                                        LineBreakMode="TailTruncation"
                                                        MaxLines="1"
                                                        Text="{Binding Category.Name}"
                                                        TextColor="White" />
                                                </Border>
                                            </HorizontalStackLayout>
                                        </Grid>

                                        <!--  Right: price + stock  -->
                                        <VerticalStackLayout
                                            Grid.Column="2"
                                            HorizontalOptions="End"
                                            Spacing="6"
                                            VerticalOptions="Center">
                                            <Label
                                                FontFamily="NexaHeavy"
                                                FontSize="13"
                                                HorizontalTextAlignment="End"
                                                Text="{Binding UnitPrice, Converter={StaticResource PriceConverter}}"
                                                TextColor="{StaticResource Primary}" />

                                            <Border
                                                Padding="6,2"
                                                Background="Transparent"
                                                HorizontalOptions="End"
                                                Stroke="{Binding CurrentStock, Converter={StaticResource StockStatusColorConverter}}"
                                                StrokeShape="RoundRectangle 8"
                                                StrokeThickness="1">
                                                <Label
                                                    FontSize="11"
                                                    LineBreakMode="TailTruncation"
                                                    MaxLines="1"
                                                    Text="{Binding CurrentStock, Converter={StaticResource StockStatusTextConverter}}"
                                                    TextColor="{Binding CurrentStock, Converter={StaticResource StockStatusColorConverter}}" />
                                            </Border>
                                        </VerticalStackLayout>
                                    </Grid>
                                </DataTemplate>
                            </editors:SfAutocomplete.ItemTemplate>


                        </editors:SfAutocomplete>
                    </Grid>
                </Border>
                <Border
                    Grid.Column="1"
                    Background="{StaticResource Brush.CardBgGradient}"
                    Shadow="{StaticResource Sh.CyanSm}"
                    StrokeShape="RoundRectangle 14"
                    StrokeThickness="0">
                    <buttons:SfSegmentedControl
                        AutoScrollToSelectedSegment="False"
                        CornerRadius="10"
                        HorizontalOptions="Center"
                        MinimumWidthRequest="200"
                        SelectedIndex="{Binding SortIndex, Mode=TwoWay}"
                        SelectionChanged="SortSeg_SelectionChanged"
                        SelectionMode="Single"
                        ShowSeparator="False"
                        Stroke="Transparent"
                        VerticalOptions="Center"
                        VisibleSegmentsCount="3">

                        <buttons:SfSegmentedControl.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>A–Z</x:String>
                                <x:String>Z–A</x:String>
                                <x:String>None</x:String>
                            </x:Array>

                        </buttons:SfSegmentedControl.ItemsSource>
                        <buttons:SfSegmentedControl.SelectionIndicatorSettings>
                            <buttons:SelectionIndicatorSettings Background="{StaticResource Primary}" SelectionIndicatorPlacement="Fill" />
                        </buttons:SfSegmentedControl.SelectionIndicatorSettings>
                    </buttons:SfSegmentedControl>
                </Border>
            </Grid>

            <!--  Filters  -->
            <Grid
                Grid.Row="2"
                ColumnDefinitions="Auto,*"
                ColumnSpacing="15">
                <HorizontalStackLayout Grid.Column="0" Spacing="10">
                    <Label
                        StyleClass="body"
                        Text="Category"
                        VerticalOptions="Center" />
                    <Border
                        Padding="10,6"
                        Background="{StaticResource Brush.CardBgGradient}"
                        HorizontalOptions="Start"
                        Shadow="{StaticResource Sh.CyanSm}"
                        Stroke="{StaticResource Border}"
                        StrokeShape="RoundRectangle 12"
                        StrokeThickness="1">
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8">
                            <!--  leading icon  -->
                            <Image
                                Grid.Column="0"
                                HeightRequest="18"
                                Source="filter.png"
                                VerticalOptions="Center"
                                WidthRequest="18" />

                            <!--  modern dropdown  -->
                            <editors:SfComboBox
                                x:Name="CategoryCombo"
                                Grid.Column="1"
                                Background="Transparent"
                                ClearButtonIconColor="Cyan"
                                DisplayMemberPath="Name"
                                DropDownBackground="White"
                                DropDownIconColor="{StaticResource Primary}"
                                EnableAutoSize="True"
                                FontFamily="NexaLight"
                                HorizontalOptions="Fill"
                                IsEditable="False"
                                ItemsSource="{Binding AllCategories}"
                                MaxDropDownHeight="320"
                                Placeholder="All Categories"
                                SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
                                SelectionChanged="CategoryCombo_SelectionChanged"
                                SelectionMode="Single"
                                Stroke="Transparent"
                                TextColor="{StaticResource TextDark}"
                                VerticalOptions="Fill"
                                WidthRequest="180">

                                <!--  dropdown rows  -->
                                <editors:SfComboBox.ItemTemplate>
                                    <DataTemplate x:DataType="models:Category">
                                        <Grid
                                            Padding="8"
                                            ColumnDefinitions="Auto,*"
                                            ColumnSpacing="10">
                                            <Border
                                                Grid.Column="0"
                                                Background="{Binding ., Converter={StaticResource CategoryColorConverter}}"
                                                HeightRequest="12"
                                                StrokeShape="RoundRectangle 999"
                                                StrokeThickness="0"
                                                WidthRequest="12" />
                                            <Label
                                                Grid.Column="1"
                                                FontFamily="NexaLight"
                                                FontSize="14"
                                                LineBreakMode="TailTruncation"
                                                MaxLines="1"
                                                Text="{Binding Name}"
                                                TextColor="{StaticResource TextDark}" />
                                        </Grid>
                                    </DataTemplate>
                                </editors:SfComboBox.ItemTemplate>


                            </editors:SfComboBox>
                        </Grid>
                    </Border>

                </HorizontalStackLayout>

                <HorizontalStackLayout
                    Grid.Column="1"
                    HorizontalOptions="Start"
                    Spacing="10">
                    <Label
                        StyleClass="body"
                        Text="Hallmark"
                        VerticalOptions="Center" />
                    <Border
                        Padding="10,6"
                        Background="{StaticResource Brush.CardBgGradient}"
                        HorizontalOptions="Start"
                        Shadow="{StaticResource Sh.CyanSm}"
                        Stroke="{StaticResource Border}"
                        StrokeShape="RoundRectangle 12"
                        StrokeThickness="1">
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8">
                            <!--  leading icon  -->
                            <Image
                                Grid.Column="0"
                                HeightRequest="25"
                                Source="karat.png"
                                VerticalOptions="Center"
                                WidthRequest="25" />

                            <!--  Hallmark dropdown (enum)  -->
                            <editors:SfComboBox
                                x:Name="HallmarkCombo"
                                Grid.Column="1"
                                Background="Transparent"
                                ClearButtonIconColor="Cyan"
                                DropDownBackground="White"
                                DropDownIconColor="{StaticResource Primary}"
                                DropDownItemHeight="44"
                                EnableAutoSize="True"
                                FontFamily="NexaLight"
                                IsEditable="False"
                                ItemsSource="{Binding AllHallmarks}"
                                Placeholder="All Hallmarks"
                                SelectedItem="{Binding SelectedHallmark, Mode=TwoWay}"
                                Stroke="Transparent"
                                TextColor="{StaticResource TextDark}"
                                WidthRequest="180">

                                <!--  each row shows converter output  -->
                                <editors:SfComboBox.ItemTemplate>
                                    <DataTemplate x:DataType="enums:HallmarkType">
                                        <Grid
                                            Padding="8"
                                            ColumnDefinitions="Auto,*"
                                            ColumnSpacing="10">
                                            <Border
                                                Grid.Column="0"
                                                Background="{Binding Converter={StaticResource HallmarkColorConverter}}"
                                                HeightRequest="12"
                                                StrokeShape="RoundRectangle 999"
                                                StrokeThickness="0"
                                                VerticalOptions="Center"
                                                WidthRequest="12" />
                                            <Label
                                                Grid.Column="1"
                                                FontFamily="NexaLight"
                                                FontSize="14"
                                                LineBreakMode="TailTruncation"
                                                MaxLines="1"
                                                Text="{Binding Converter={StaticResource HallmarkTypeConverter}}"
                                                TextColor="{StaticResource TextDark}"
                                                VerticalOptions="Center" />
                                        </Grid>
                                    </DataTemplate>
                                </editors:SfComboBox.ItemTemplate>
                            </editors:SfComboBox>

                        </Grid>
                    </Border>

                </HorizontalStackLayout>
            </Grid>

        </Grid>
        <Grid Grid.Row="1" Margin="20,0,20,20">
            <Border
                Background="{StaticResource Brush.BackgroundGradient}"
                HorizontalOptions="Fill"
                Shadow="{StaticResource Sh.CyanLg}"
                StrokeShape="RoundRectangle 25"
                StrokeThickness="0"
                VerticalOptions="Fill">
                <syncfusion:SfListView
                    x:Name="ProductsList"
                    Margin="10,10,10,0"
                    AutoFitMode="Height"
                    ItemSpacing="10"
                    ItemsSource="{Binding FilteredProducts}"
                    SelectionBackground="Transparent"
                    SelectionMode="None">
                    <syncfusion:SfListView.ItemsLayout>
                        <syncfusion:GridLayout x:Name="ProductGridLayout" SpanCount="3" />
                    </syncfusion:SfListView.ItemsLayout>
                    <syncfusion:SfListView.ItemTemplate>
                        <DataTemplate x:DataType="models:Product">
                            <Border
                                Padding="0"
                                Background="White"
                                MinimumHeightRequest="340"
                                Shadow="{StaticResource Sh.CyanSm}"
                                StrokeShape="RoundRectangle 14"
                                StrokeThickness="0">
                                <AbsoluteLayout>
                                    <Image
                                        AbsoluteLayout.LayoutBounds="0,0,1,1"
                                        AbsoluteLayout.LayoutFlags="All"
                                        Aspect="AspectFill"
                                        Source="{Binding ImageUrl}" />
                                    <Border
                                        Margin="0,8,0,0"
                                        AbsoluteLayout.LayoutBounds="0.95,0,35,35"
                                        AbsoluteLayout.LayoutFlags="XProportional,YProportional"
                                        BackgroundColor="White"
                                        HeightRequest="35"
                                        StrokeShape="RoundRectangle 10"
                                        StrokeThickness="0"
                                        WidthRequest="35">
                                        <Image
                                            BackgroundColor="Transparent"
                                            HeightRequest="30"
                                            Source="more.png"
                                            WidthRequest="30" />
                                    </Border>
                                    <Border
                                        Padding="10"
                                        AbsoluteLayout.LayoutBounds="0,1,1,80"
                                        AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional"
                                        Background="#B3000000"
                                        StrokeThickness="0">
                                        <Grid
                                            ColumnDefinitions="*,Auto"
                                            RowDefinitions="Auto,Auto"
                                            RowSpacing="6">
                                            <Label
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                FontFamily="NexaHeavy"
                                                FontSize="16"
                                                LineBreakMode="TailTruncation"
                                                MaxLines="1"
                                                Text="{Binding Name}"
                                                TextColor="White"
                                                VerticalOptions="Start" />
                                            <Label
                                                Grid.Row="1"
                                                Grid.Column="0"
                                                FontFamily="NexaLight"
                                                FontSize="12"
                                                LineBreakMode="TailTruncation"
                                                MaxLines="1"
                                                Text="{Binding Sku, StringFormat='SKU: {0}'}"
                                                TextColor="#B0B0B0"
                                                VerticalOptions="Start" />
                                            <Label
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                FontFamily="NexaHeavy"
                                                FontSize="16"
                                                HorizontalTextAlignment="End"
                                                Text="{Binding UnitPrice, Converter={StaticResource PriceConverter}}"
                                                TextColor="White"
                                                VerticalOptions="Start" />
                                        </Grid>
                                    </Border>
                                </AbsoluteLayout>
                            </Border>
                        </DataTemplate>
                    </syncfusion:SfListView.ItemTemplate>
                </syncfusion:SfListView>
            </Border>
        </Grid>
    </Grid>
</ContentPage>